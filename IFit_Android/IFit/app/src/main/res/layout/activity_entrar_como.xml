<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rosemberg.ifit.activities.EntrarComo">

    <ImageView
        android:layout_height="wrap_content"
        android:src="@drawable/logomaior"
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="ENTRAR COMO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:id="@+id/textView3"
        android:textSize="24sp"
        android:textColor="#66ff33" />

    <Button
        android:text="Nutricionista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNutri"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2"
        android:textSize="24sp"
        android:background="#66ff33" />

    <TextView
        android:text="OU"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/textView4"
        android:autoText="true"
        android:textSize="24sp"
        android:layout_below="@+id/btnNutri"
        android:layout_centerHorizontal="true"
        android:textColor="#66ff33" />

    <Button
        android:text="Aluno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:id="@+id/btnAluno"
        android:layout_below="@+id/btnNutri"
        android:layout_alignStart="@+id/btnNutri"
        android:layout_alignEnd="@+id/btnNutri"
        android:textSize="24sp"
        android:background="#66ff33" />

</RelativeLayout>
